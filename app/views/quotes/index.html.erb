<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">


      <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-4">Quotes</h1>
      <% if user_signed_in? %>
  <%= link_to "Add New Quote", new_quote_path, class: "btn btn-success" %>
<% end %>  
      </div>
<div class="mb-4">
  
</div>
  <% @quotes.each do |quote| %>
    <div class="card mt-3">
      <div class="card-body">

        
        <p class="card-text lead">
           "<%= quote.text %>"
           
          <span class="card-subtitle mb-2 text-muted"><%= quote.philosopher.first_name %> <%= quote.philosopher.last_name %> 
          (<% if quote.philosopher.birth_year.present? %> 
            <%= quote.philosopher.birth_year %>
            <% if quote.philosopher.death_year.present? %> 
              - <%= quote.philosopher.death_year %>
            <% end %>
          <% end %>)</span>
        </p>

        
        <p class="card-text mb-4 text-muted">
          Added by: <%= quote.user.first_name %> <%= quote.user.last_name %><br>
          <% if quote.categories.any? %>
            &nbsp; Categories:
            <% quote.categories.each do |category| %>
              <%= category.name %><% unless category == quote.categories.last %> <%= ',' %> <% end %>
            <% end %>
            &nbsp; Date Added: <%= quote.created_at.strftime("%Y-%m-%d") %>
          <% end %>
        </p>

        
        <p>
          <%= link_to "View", quote_path(quote), class: "btn btn-primary" %>
        </p>

      </div>
    </div>
  <% end %>
</div>
   </div>
  </div>
</div>