<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <% if notice.present? %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>

      <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-4">Categories</h1>

        <% if user_signed_in? %>
 <%= link_to "New category", new_category_path, class: "btn btn-success" %>
<% end %>
        
      </div>

      <div id="categories">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th class="text-end">Actions</th> <!-- Align actions to the right -->
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td class="text-end"> <!-- Align buttons to the right -->
                <% if user_signed_in? %>
                  <%= link_to "Show", category, class: "btn btn-primary btn-sm me-1" %> <!-- Add margin to buttons -->
                  <%= link_to "Edit", edit_category_path(category), class: "btn btn-warning btn-sm me-1" %>
                  <%= link_to "Delete", category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", remote: true %>
                <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
