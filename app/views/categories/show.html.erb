<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <% if notice.present? %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>

      <%= render @category %>

      <div class="mt-4 d-flex justify-content-between">
        <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-primary" %>
        <%= link_to "Back to categories", categories_path, class: "btn btn-secondary" %>
        <%= button_to "Destroy this category", @category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", remote: true %>
      </div>
    </div>
  </div>
</div>
