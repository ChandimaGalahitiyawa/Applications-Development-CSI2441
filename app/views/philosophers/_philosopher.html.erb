<div id="<%= dom_id philosopher %>">
  <div class="card">
    <div class="card-body">
      <p class="card-text"><strong>Philosopher:</strong> <%= "#{philosopher.first_name} #{philosopher.last_name}" %></p>
      <p class="card-text">
        <strong>Years:</strong> <%= "#{philosopher.birth_year} - #{philosopher.death_year}" %>
      </p>
      <p class="card-text">
        <strong>Biography:</strong> <%= philosopher.biography %>
      </p>
    </div>
  </div>
</div>

