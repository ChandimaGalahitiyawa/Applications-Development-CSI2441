<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <% if notice.present? %>
        <div class="alert alert-success">
          <p><%= notice %></p>
        </div>
      <% end %>

      <h1 class="">Details</h1>
      <%= render @philosopher %>

      <div class="mt-4">
       <% if user_signed_in? %>
        <%= link_to "Edit this philosopher", edit_philosopher_path(@philosopher), class: "mt-4 btn btn-primary custom-btn" %>
        <%= button_to "Delete this philosopher", @philosopher, method: :delete, data: { confirm: "Are you sure?" }, class: "mt-3 btn btn-danger custom-btn" %>
        
         <% end %>
        <%= link_to "Back to Philosophers", philosophers_path, class: "mt-5 btn btn-secondary custom-btn" %>
      </div>
    </div>
  </div>
</div>

