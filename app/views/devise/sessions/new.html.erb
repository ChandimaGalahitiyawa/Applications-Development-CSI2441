<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Sign in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, class: "font-weight-bold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "font-weight-bold" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group mb-3">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Sign in", class: "btn btn-primary custom-btn mb-4" %>
            </div>
          <% end %>
          
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "mb-4 mt-1" %><br />
        <% end %>
        </div>
      </div>
      <div class="text-center mt-5 mb-5">
        <p>Don't have an account?</p>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-secondary custom-btn" %><br />
      </div>
    </div>
  </div>
</div>

