<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-3">
              <%= f.label :first_name, class: "font-weight-bold" %>
              <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :last_name, class: "font-weight-bold" %>
              <%= f.text_field :last_name, class: "form-control", placeholder: "" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :email, class: "font-weight-bold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "font-weight-bold" %>
              <% if @minimum_password_length %>
                <small class="text-muted"><em>(<%= @minimum_password_length %> characters minimum)</em></small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password_confirmation, class: "font-weight-bold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "" %>
            </div>

            <div class="text-center">
              <%= f.submit "Sign up", class: "btn btn-primary custom-btn" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-5 mb-5">
        <p>Already have an account?</p>
        <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-secondary custom-btn" %>
      </div>
    </div>
  </div>
</div>
